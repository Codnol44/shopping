<body>
<header>
    <h1>Shopping list</h1>
    {%  include('inc/nav.html.twig') %}
</header>

<main>
    {% block body %}
        {% for group, messages in app.flashes  %}
            {%  for message in messages %}
                <div class="alert alert~{{ group }} }}" role="alert">
                    {{ message }}
                </div>
            {%  endfor %}
        {%  endfor %}
    {% endblock %}
</main>

